<div class="navbar">
  <i class="fas fa-film logo"></i>
  <div class="btns">
    <%= link_to "Remove",
                list_path(@list),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class:"btn btn-remove"%>
    <%= link_to 'Add a list', new_list_path, class:"btn btn-add" %>
    <%= link_to 'Back', lists_path, class:"btn btn-back" %>
  </div>
</div>


<div class="banner <%= @list.name %>">
  <h1><%= @list.name.capitalize %></h1>
</div>

<div class="container">
  <div class="top-cards">
    <div class="btns">
      <%= link_to 'Add a Movie', new_list_bookmark_path(@list), class:"btn btn-add" %>
      <%= link_to 'Add a Review', new_list_review_path(@list), class:"btn btn-add" %>
    </div>
  </div>

  <div class="movie-cards">
  <% @list.bookmarks.each do |bookmark| %>
      <div class="movie-card">
        <div class="image">
           <img src="<%= bookmark.movie.poster_url %>" alt="movie-image" class="movie-image">
        </div>
        <div class="top">
          <div class="title-rating">
            <h3 class="title"><%= bookmark.movie.title %></h3>
            <p class="rating"><%= bookmark.movie.rating %><i class="fas fa-star etoile pd-l"></i></p>
          </div>
          <p class="comment"><%= bookmark.movie.overview %></p>
        </div>
        <div class="bottom">
        <div class="title-rating">
        <i class="fas fa-quote-left title"></i><p class="comment"><strong><%= bookmark.comment %></p></strong>
        </div>
          <%= link_to "Remove",
                      bookmark_path(bookmark),
                      method: :delete,
                      data: { confirm: "Are you sure?" },
                      class:"btn btn-remove"%>
        </div>
      </div>
    <% end %>
  </div>

  <div class="reviews">
  <h3>Reviews</h3>
  <% @list.reviews.each do |review| %>
    <div class="review">
      <% case review.note%>
      <% when 5%>
      <p class="rating"><i class="fas fa-star etoile"></i><i class="fas fa-star etoile pd-l"></i><i class="fas fa-star etoile pd-l"></i><i class="fas fa-star etoile pd-l"></i><i class="fas fa-star etoile pd-l"></i></p>
      <% when 4%>
      <p class="rating"><i class="fas fa-star etoile"></i><i class="fas fa-star etoile pd-l"></i><i class="fas fa-star etoile pd-l"></i><i class="fas fa-star etoile pd-l"></i></p>
      <% when 3%>
      <p class="rating"><i class="fas fa-star etoile"></i><i class="fas fa-star etoile pd-l"></i><i class="fas fa-star etoile pd-l"></i></p>
      <% when 2%>
        <p class="rating"><i class="fas fa-star etoile"></i><i class="fas fa-star etoile pd-l"></i></p>
      <% when 1%>
        <p class="rating"><i class="fas fa-star etoile"></i></p>
      <% end %>

      <p class="pd-t"><%= review.content %></p>
    </div>
  <% end %>
  </div>
</div>
<%= render "reviews/new", locales: [ @list, Review.new ] %>
