<div class="navbar">
  <i class="fas fa-film logo"></i>
  <div class="btns">
    <%= link_to 'Add a list', new_list_path, class:"btn btn-add" %>
  </div>
</div>

<div class="banner banner-list">
  <div class="banner-text">
    <h3>Save any kind of movies</h3>
    <p>Classic</p>
  </div>
</div>

<div class="container">
  <div class="list-cards">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class:"list-tag" do %>
        <div class="list-card list-image <%= list.name %>">
          <h3><%= list.name.capitalize %></h3>
        </div>
        <% end %>
    <% end %>
  </div>
</div>
